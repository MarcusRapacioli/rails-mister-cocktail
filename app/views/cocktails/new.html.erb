<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-4 col-md-offset-4">
      <h1 class="text-center">Add a new cocktail</h1>
      <div class="row">
        <div class="col-xs-12">
          <div class="form-group">
            <%= simple_form_for(@cocktail) do |f| %>
              <%= f.input :name %>
              <%= f.submit "Give it a shake", :class => 'shake' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

