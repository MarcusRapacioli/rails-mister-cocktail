<h1><%= @cocktail.name %></h1>

<ul>
<% @cocktail.doses.each do |dose|%>
<li>
  <%= dose.description %> of <%= dose.ingredient.name %>
  <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }  do %> <i class="fas fa-trash-alt"></i>
  <% end %>
</li>
<% end %>
</ul>

<%= link_to "Add an ingredient to #{@cocktail.name}", new_cocktail_dose_path(@cocktail) %> <br>
<%= link_to "View all cocktails", cocktails_path %>

